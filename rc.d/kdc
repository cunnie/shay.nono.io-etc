#!/bin/sh
#
# $FreeBSD: releng/10.3/etc/rc.d/kdc 272862 2014-10-09 23:35:23Z hrs $
#

# PROVIDE: kdc
# REQUIRE: NETWORKING
# KEYWORD: shutdown

. /etc/rc.subr

name=kdc
rcvar=${name}_enable
start_precmd=${name}_start_precmd

set_rcvar_obsolete kerberos5_server_enable kdc_enable
set_rcvar_obsolete kerberos5_server kdc_program
set_rcvar_obsolete kerberos5_server_flags kdc_flags

kdc_start_precmd()
{

	command_args="$command_args --detach"
}

load_rc_config $name
run_rc_command "$1"
