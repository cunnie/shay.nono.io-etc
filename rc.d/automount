#!/bin/sh
#
# $FreeBSD: releng/11.1/etc/rc.d/automount 287951 2015-09-18 06:54:52Z trasz $
#

# PROVIDE: automount
# REQUIRE: nfsclient automountd
# KEYWORD: nojail shutdown

. /etc/rc.subr

name="automount"
rcvar="autofs_enable"
start_cmd="automount_start"
stop_cmd="automount_stop"
required_modules="autofs"

automount_start()
{

	/usr/sbin/automount ${automount_flags}
}

automount_stop()
{

	/sbin/umount -At autofs
}

load_rc_config $name
run_rc_command "$1"
